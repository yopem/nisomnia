{
  "name": "nisomnia",
  "type": "module",
  "version": "0.0.1",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "cf-typegen": "wrangler types",
    "deploy": "astro build && wrangler deploy",
    "astro": "bunx --bun astro",
    "build": "bunx --bun astro build",
    "check": "bunx --bun astro check",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run with-env drizzle-kit migrate",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:up": "drizzle-kit up",
    "dev": "bunx --bun astro dev",
    "format:check": "prettier --check \"**/*.{astro,ts,tsx,mts,js,jsx,mjs,json,md}\"",
    "format:write": "prettier --write \"**/*.{astro,ts,tsx,mts,js,jsx,mjs,json,md}\"",
    "lint": "eslint --ext .astro,.ts,.tsx,.js,.mjs ./src",
    "lint:fix": "eslint --ext .astro,.ts,.tsx,.js,.mjs ./src --fix",
    "preview": "bunx --bun astro preview --host 0.0.0.0",
    "start": "bunx --bun run ./dist/server/entry.mjs --host 0.0.0.0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/node": "^9.2.2",
    "@astrojs/ts-plugin": "^1.10.4",
    "@fontsource/inter": "^5.2.6",
    "@tailwindcss/vite": "^4.1.10",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "@yopem-ui/utils": "^0.0.2",
    "@yopem/try-catch": "^0.0.2",
    "astro": "^5.10.1",
    "astro-embed": "^0.9.0",
    "astro-seo-meta": "^5.1.0",
    "astro-seo-schema": "^5.0.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "0.8",
    "nanoid": "^5.1.5",
    "node-html-parser": "^7.0.1",
    "superjson": "^2.2.2",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/js": "^9.29.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.35.0",
    "drizzle-kit": "^0.31.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.0",
    "lefthook": "^1.11.14",
    "pg": "^8.16.2",
    "prettier": "^3.6.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "wrangler": "^4.21.0"
  },
  "packageManager": "bun@1.2.17"
}
